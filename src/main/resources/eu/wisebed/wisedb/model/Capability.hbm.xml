<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wiseml.model.setup.Capability" table="CAPABILITIES">

        <id name="name" column="CAPABILITYID"/>

        <property name="datatype" />
        <property name="unit" />
        <property name="defaultvalue" />

        <set name="nodes" table="NODE_CAPABILITIES" inverse="true">
            <key column="CAPABILITYID"/>
            <many-to-many column="NODEID" class="eu.wisebed.wiseml.model.setup.Node" />
        </set>

    </class>

</hibernate-mapping>
