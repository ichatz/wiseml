<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wiseml.model.setup.Capability" table="capabilities"
           dynamic-insert="true" dynamic-update="false">

        <id name="name" column="capability_id"/>

        <property name="datatype"/>
        <property name="unit" />
        <property name="defaultvalue" />

        <set name="nodes" table="node_capabilities" inverse="true" lazy="true" order-by="lower(node_id) asc">
            <key column="capability_id" not-null="true"/>
            <many-to-many column="node_id" class="eu.wisebed.wiseml.model.setup.Node" />
        </set>

        <set name="links" table="link_capabilities" inverse="true" lazy="true" order-by="lower(link_source) asc">
            <key column="capability_id" not-null="true"/>
            <many-to-many class="eu.wisebed.wiseml.model.setup.Link">
                <column name="link_source" not-null="true"/>
                <column name="link_target" not-null="true"/>
            </many-to-many>
        </set>

        <set name="nodeReadings" table="node_readings" inverse="true" lazy="true" order-by="timestamp asc">
            <key column="capability_id" not-null="true"/>
            <one-to-many class="eu.wisebed.wisedb.model.NodeReading"/>
        </set>

        <set name="linkReadings" table="link_readings" inverse="true" lazy="true" order-by="timestamp asc">
            <key column="capability_id" not-null="true"/>
            <one-to-many class="eu.wisebed.wisedb.model.LinkReading"/>
        </set>

    </class>

</hibernate-mapping>
