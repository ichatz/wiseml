<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="eu.wisebed.wisedb.model.LastLinkReading" table="last_link_capability_readings"
           dynamic-insert="true" dynamic-update="true">

        <composite-id>
            <key-many-to-one name="link" class="eu.wisebed.wiseml.model.setup.Link">
                <column name="link_source" not-null="true"/>
                <column name="link_target" not-null="true"/>
            </key-many-to-one>
            <key-many-to-one name="capability" column="capability_id" class="eu.wisebed.wiseml.model.setup.Capability"/>
        </composite-id>

        <property name="timestamp" type="timestamp"/>

        <property name="reading" type="java.lang.Double"/>

        <property name="rssiValue" type="java.lang.Double" />

        <property name="stringReading" length="10000"/>

    </class>
</hibernate-mapping>