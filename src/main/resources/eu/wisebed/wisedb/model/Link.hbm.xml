<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wiseml.model.setup.Link" table="LINKS">

        <composite-id>
            <key-property name="source" column="SOURCE"/>
            <key-property name="target" column="TARGET"/>
        </composite-id>

        <property name="encrypted">
            <column name="encrypted" sql-type="BOOLEAN" />
        </property>

        <property name="virtual">
            <column name="virtual" sql-type="BOOLEAN" />
        </property>

       <component name="rssi" class="eu.wisebed.wiseml.model.setup.Rssi">
           <property name="unit" column="rssi_unit"/>
           <property name="datatype" column="rssi_datatype" />
        </component>

        <set name="setups" table="SETUP_LINKS">
            <key>
                <column name="LINK_SOURCE"/>
                <column name="LINK_TARGET"/>
            </key>
            <many-to-many column="SETUPID" class="eu.wisebed.wiseml.model.setup.Setup"/>
        </set>

        <list name="capabilities" table="LINK_CAPABILITIES" cascade="none">
            <key>
                <column name="LINK_SOURCE"/>
                <column name="LINK_TARGET"/>
            </key>
            <list-index column="CAP_IDX"/>
            <many-to-many column="CAPABILITYID" class="eu.wisebed.wiseml.model.setup.Capability"/>
        </list>

    </class>

</hibernate-mapping>
