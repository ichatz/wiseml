<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wiseml.model.setup.Link" table="links">

        <composite-id>
            <key-property name="source" column="link_source"/>
            <key-property name="target" column="link_target"/>
        </composite-id>

        <property name="encrypted">
            <column name="encrypted" sql-type="BOOLEAN" />
        </property>

        <property name="virtual">
            <column name="virtual" sql-type="BOOLEAN" />
        </property>

       <component name="rssi" class="eu.wisebed.wiseml.model.setup.Rssi">
           <property name="unit" column="rssi_unit"/>
           <property name="datatype" column="rssi_datatype" />
        </component>


        <list name="capabilities" table="link_capabilities" lazy="false">
            <key>
                <column name="link_source" not-null="true"/>
                <column name="link_target" not-null="true"/>
            </key>
            <list-index column="capability_index"/>
            <many-to-many column="capability_id" class="eu.wisebed.wiseml.model.setup.Capability"/>
        </list>

        <set name="readings" table="link_readings" inverse="true" lazy="false">
            <key>
                <column name="link_source" not-null="true"/>
                <column name="link_target" not-null="true"/>
            </key>
            <one-to-many class="eu.wisebed.wisedb.model.LinkReading"/>
        </set>

        <set name="setups" table="setup_links" inverse="true" lazy="false">
            <key>
                <column name="link_source" not-null="true"/>
                <column name="link_target" not-null="true"/>
            </key>
            <many-to-many column="setup_id" class="eu.wisebed.wiseml.model.setup.Setup"/>
        </set>

    </class>
</hibernate-mapping>
