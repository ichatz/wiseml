<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.Slse" table="slses"
           dynamic-update="true" dynamic-insert="true">
        <cache usage="read-write"/>

        <id name="name" column="slse_id"/>

        <property name="creationTime" type="timestamp"/>

        <property name="expirationTime" type="timestamp"/>

        <list name="nodes" table="slse_nodes" cascade="save-update" lazy="true">
            <key column="slse_id" not-null="true"/>
            <list-index column="node_index"/>
            <many-to-many column="node_id" class="eu.wisebed.wisedb.model.Node"/>
        </list>

        <!--<set name="nodes" table="slse_nodes" inverse="true" lazy="extra" order-by="timestamp">-->
        <!--<key column="slse_id" not-null="true"/>-->
        <!--<many-to-many class="eu.wisebed.wisedb.model.Node"/>-->
        <!--</set>-->

        <many-to-one name="setup" column="setup" class="eu.wisebed.wisedb.model.Setup" not-null="true"/>

    </class>
</hibernate-mapping>
