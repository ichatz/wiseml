<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.LinkReading" table="link_readings"
           dynamic-update="true" dynamic-insert="true">

        <id name="id" column="reading_id">
            <generator class="native" />
        </id>

        <property name="timestamp" type="timestamp" />
        <property name="reading" type="double"/>
        <property name="rssiValue" type="double" />

        <many-to-one name="link" class="eu.wisebed.wiseml.model.setup.Link">
            <column name="link_source" not-null="true"/>
            <column name="link_target" not-null="true"/>
        </many-to-one>
        <many-to-one name="capability" class="eu.wisebed.wiseml.model.setup.Capability">
            <column name="capability_id" not-null="true"/>
        </many-to-one>

    </class>

</hibernate-mapping>
