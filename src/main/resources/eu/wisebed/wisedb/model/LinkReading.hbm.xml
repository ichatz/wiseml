<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.LinkReading" table="link_readings">

        <id name="id" column="reading_id">
            <generator class="native" />
        </id>

        <property name="timestamp" type="timestamp" />
        <property name="reading" type="double"/>
        <property name="rssiValue" type="double" />

        <many-to-one name="link" class="eu.wisebed.wiseml.model.setup.Link" not-null="true">
            <column name="link_source"/>
            <column name="link_target"/>
        </many-to-one>
        <many-to-one name="capability" column="capability_id" class="eu.wisebed.wiseml.model.setup.Capability" not-null="true"/>
    </class>

</hibernate-mapping>
