<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.NodeReading" table="node_readings">

        <id name="id" column="reading_id">
            <generator class="native" />
        </id>

        <property name="timestamp" type="timestamp" />
        <property name="reading"/>

        <many-to-one name="node" column="node_id" class="eu.wisebed.wiseml.model.setup.Node" />
        <many-to-one name="capability" column="capability_id" class="eu.wisebed.wiseml.model.setup.Capability" />
    </class>

</hibernate-mapping>
