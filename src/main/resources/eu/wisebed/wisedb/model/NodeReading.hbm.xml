<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.NodeReading" table="node_readings"
           dynamic-update="true" dynamic-insert="true">

        <id name="id" column="reading_id">
            <generator class="native"/>
        </id>

        <property name="timestamp" type="timestamp"/>
        <property name="reading" type="java.lang.Double"/>
        <property name="stringReading" length="10000"/>

        <many-to-one name="node" class="eu.wisebed.wisedb.model.Node">
            <column name="node_id" not-null="true"/>
        </many-to-one>

        <many-to-one name="capability" class="eu.wisebed.wisedb.model.Capability">
            <column name="capability_id" not-null="true"/>
        </many-to-one>
    </class>

</hibernate-mapping>
