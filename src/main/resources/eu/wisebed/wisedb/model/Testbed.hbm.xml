<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.Testbed" table="testbeds"
           dynamic-insert="true" dynamic-update="true">
        <cache usage="read-write" />

        <id name="id" column="testbed_id">
            <generator class="native"/>
        </id>

        <property name="name" not-null="true"/>
        <property name="description"/>
        <property name="url"/>
        <property name="urnPrefix"/>
        <property name="federated" type="boolean"/>
        <property name="snaaUrl"/>
        <property name="rsUrl"/>
        <property name="sessionUrl"/>

        <one-to-one name="setup" class="eu.wisebed.wiseml.model.setup.Setup" cascade="save-update"/>
    </class>
</hibernate-mapping>