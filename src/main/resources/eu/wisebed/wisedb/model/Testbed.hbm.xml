<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="eu.wisebed.wisedb.model.Testbed" table="testbeds">

        <id name="id" column="testbed_id">
            <generator class="native"/>
        </id>

        <property name="name" not-null="true"/>
        <property name="description"/>
        <property name="url"/>
        <property name="urnPrefix"/>
        <property name="federated" type="boolean"/>
        <property name="snaaUrl"/>
        <property name="rsUrl"/>
        <property name="sessionUrl"/>

        <set name="setups" table="testbed_setups" inverse="true" lazy="true">
            <key column="testbed_id"/>
            <one-to-many class="eu.wisebed.wiseml.model.setup.Setup"/>
        </set>

    </class>

</hibernate-mapping>